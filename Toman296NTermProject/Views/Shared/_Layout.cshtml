<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="header" style="color:white;"><h2>&nbsp;<span class="glyphicon glyphicon-stats" aria-hidden="true"></span>&nbsp;&nbsp;Tech and gender representation&nbsp;<small>&nbsp;&nbsp;Data tool and hub</small></h2>@if (User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("LogOff", "Account")"><span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Log Out</a>
    }
    else
    {
        <a href="@Url.Action("Login", "Account")"><span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Log In&nbsp;&nbsp;</a>
                <a href="@Url.Action("Register", "Account")"><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;Register </a>
    }</div>
    <div class="contentBox">
        <h3>@ViewBag.Title</h3>
        @RenderBody()
        <hr />
        <footer>
            <p>
                <a href="~/core" class="btn btn-default" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)">
                    <span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;home
                </a>
                &nbsp;&nbsp;&nbsp;
                <a href="~/data/index" class="btn btn-default" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)">
                    <span class="glyphicon glyphicon-cog"></span>&nbsp;&nbsp;data engine
                </a>
                &nbsp;&nbsp;&nbsp;
                <a href="~/core/contact" class="btn btn-default" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)">
                    <span class="glyphicon glyphicon-envelope"></span>&nbsp;&nbsp;contact
                </a>
                &nbsp;&nbsp;&nbsp;
                <a href="~/core/resources" class="btn btn-default" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)">
                    <span class="glyphicon glyphicon-book"></span>&nbsp;&nbsp;resources
                </a>
                &nbsp;&nbsp;&nbsp;
                <a href="~/registry/index" class="btn btn-default" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)">
                    <span class="glyphicon glyphicon-list-alt"></span>&nbsp;&nbsp;directory
                </a>
                &nbsp;&nbsp;&nbsp;
                <a href="~/core/about" class="btn btn-default" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)">
                    <span class="glyphicon glyphicon-star"></span>&nbsp;&nbsp;about
                </a>

            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
